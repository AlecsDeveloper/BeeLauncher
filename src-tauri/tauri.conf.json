{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "beelauncher",
  "version": "0.1.0",
  "identifier": "com.beelauncher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "beelauncher",
        "width": 800,
        "height": 500,
        "minWidth": 800,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/bl-hive.png",
      "icons/bl-hive.ico"
    ]
  }
}
